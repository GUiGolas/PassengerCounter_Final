<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_viagem_nome"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_viagem_onibus"
                android:layout_below="@+id/item_viagem_nome"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/item_viagem_origem"
                android:layout_below="@+id/item_viagem_onibus"
                android:textColor="@color/colorAccent"
                android:hint="@string/txt_origem"
                android:paddingTop="10sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/item_viagem_sinal"
                android:layout_below="@+id/item_viagem_onibus"
                android:layout_toEndOf="@+id/item_viagem_origem"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/ic_compare_arrows_black_24dp"
                android:paddingTop="10sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_viagem_destino"
                android:layout_below="@+id/item_viagem_onibus"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorAccent"
                android:hint="@string/txt_destino"
                android:paddingTop="10sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_viagem_cor"
                android:layout_below="@+id/item_viagem_origem"
                android:layout_alignParentStart="true"
                android:hint="@string/txt_cor"
                android:paddingTop="10sp"

                />
            <Button
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:id="@+id/item_viagem_btnContagem"
                android:layout_below="@+id/item_viagem_destino"
                android:backgroundTint="@color/btnEnphasys"
                android:elevation="1dp"
                android:textColor="@color/colorButton"
                android:drawableStart="@drawable/ic_arrow_forward_white_24dp"
                android:paddingTop="10sp"

                />





        </RelativeLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>